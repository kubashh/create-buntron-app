{
  "name": "create-buntron-app",
  "version": "1.3.3",
  "description": "Create buntron (Bun + Electron) apps in one command",
  "author": "kubashh",
  "license": "MIT",
  "repository": "https://github.com/kubashh/create-buntron-app",
  "keywords": [
    "electron",
    "react",
    "buntron",
    "create-buntron-app",
    "kubashh",
    "bun",
    "ts",
    "wdwh"
  ],
  "files": [
    "dist.ts",
    "template"
  ],
  "bin": "./dist.ts",
  "scripts": {
    "dev": "clear && bun src/dev.ts && cd workspace && bun i && bun dev",
    "deploy": "bun src/deploy.ts"
